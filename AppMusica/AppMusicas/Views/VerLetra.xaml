<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMusicas.Views.VerLetra"
             Title="Letra de tu tema favorito">
    <VerticalStackLayout HorizontalOptions="Center" BackgroundColor="#F7B548" >
        <Label 
            Text="Letra del tema seleccionado"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            FontSize="Medium"
            
            />

        <ScrollView  HeightRequest="550" 
                     HorizontalOptions="Center"
                     Margin="5"
                     VerticalOptions="Center">

            
            <Label 
            Text= "{Binding letra_cancion}"
            x:Name="MostrarLetra"
                FontSize="Small"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                    
              />

        </ScrollView>


    </VerticalStackLayout>
</ContentPage>